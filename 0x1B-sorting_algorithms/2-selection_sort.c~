#include "sort.h"

/**
*
*
*
**/

void selection_sort(int *array, size_t size)
{
	size_t i;
	size_t j;
	size_t min;

	for (i = 0; i < size - 1; i++)
	{
		for (j = i + 1; j < size; j++)
		{
			min = i;
			if (array[j] < array[min])
			{
				min = j;
			}	
		}
		swap(&array[min], &array[i]);
		print_array(array, size);
	}
}
